<% content_for :head do %>
  <%= @pinion.css_url("/assets/css/forms.css") %>
  <%= @pinion.css_url("/assets/css/authentication.css") %>
<% end %>

<div id="authentication">
  <div class="authenticationForm">
    <p><%= flash[:message] %></p>
    <form class="standard" action="/signin?redirect=<%= params[:redirect] %>" method="post">
      <table>
        <tr>
          <td></td>
          <td>
            <% if params[:action] == "signin" %>
              <%= erb :_flash_errors %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td class="label">Email</td>
          <td class="field"><input type="text" name="email" value="<%= flash[:email] %>" /></td>
        </tr>
        <tr>
          <td class="label">Password</td>
          <td class="field"><input type="password" name="password" /></td>
        </tr>
        <tr>
          <td></td>
          <td class="field"><input type="submit" value="Sign in" /></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <a id="forgotPassLink" href="#" onclick="$('#forgotPassword').fadeIn()">Forgot Password?</a>
          </td>
      </table>
    </form>

    <div id="forgotPassword">
      <div class="forgotPassword">
        <form class="standard" action="/newPassword?redirect=<%= params[:redirect] %>" method="post">
          <table>
            <tr>
              <td class="label">Email</td>
              <td class="field"><input type="text" name="email" value="<%= flash[:email] %>" /></td>
            </tr>
            <tr>
              <td></td>
              <td class="field"><input type="submit" value="Send me a new password" /></td>
            </tr>
          </table>
        </form>
      </div>
    </div>
  </div>

  <div class="authenticationForm">
    <form class="standard" action="/signup?redirect=profile/home/firstlogin" method="post">
      <table>
        <tr>
          <td></td>
          <td><h5>New user? Sign up!</h5></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <% if params[:action] == "signup" %>
              <%= erb :_flash_errors %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td class="label">Full name</td>
          <td class="field"><input type="text" name="name" value="<%= flash[:name] %>"/></td>
        </tr>
        <tr>
          <td class="label">Email</td>
          <td class="field"><input type="text" name="email" value="<%= flash[:email] %>"/></td>
        </tr>
        <tr>
          <td class="label">Password</td>
          <td class="field"><input type="password" name="password" /></td>
        </tr>
        <tr>
          <td></td>
          <td class="field"><input type="submit" value="Create an Account" /></td>
        </tr>
      </table>
      </div>
    </form>
  </div>
</div>
