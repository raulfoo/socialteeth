<% content_for :head do %>
  <%= @pinion.css_url("/assets/css/index.css") %>
  <%= @pinion.css_url("/assets/css/forms.css") %>
  <%= @pinion.css_url("/assets/css/details.css") %>
  <%= @pinion.css_url("/assets/css/flowChart.css") %>
  <%= @pinion.js_url("/assets/js/flowchart.js") %>
  <%= @pinion.js_url("/assets/js/trendingCampaigns.js") %>
  <%= @pinion.js_url("/assets/js/twitterFeedPosition.js") %>
<% end %>

<div id="home"> 

  <div id="featuredAd">
   <span> TRENDING CAMPAIGN </span>
    <% @ads.each_slice(1) do |slice| %>
      <% slice.each do |ad| %>
      <%# ad=@ads[0]%>
     <div class ="allAdsTopBox">
     <h1 class="trendingTitle" ><a href="/ads/<%= ad.public_id %>"><%= ad.title %> </a> <a class="nextAd"> -> </a></h1>
    
     <div class="trendingDetails">
       <div class="trendingVideo"><%= erb :video_embedSmall, :locals => { :ad => ad } %></div>
       <div class = "trendingDescription">
        <%= ad.call_to_action %>
        <div class = "trendingAboutSubmit">
          <%= ad.about_submitter %>
        </div>
       </div>
       <div class="progressBox">
        <div class="socialMediaProgress"></div>
        <%= erb :_paymentProgress, :locals => {:ad => ad} %>
     
        <div class="bothButtons">
          <a id="participateButton" class="button" href="/ads/<%= ad.public_id %>">Participate</a>
          <a id="donateButton" class="button" href="/ads/<%= ad.public_id %>/contribute">Donate</a>
        </div>
     </div>
      </div>
    </div>
    <% end %>
    <% end %>
 </div>

