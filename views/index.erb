  </div>
  
  <a name="watch"></a>
  <div id="currentCampaigns">
    <span> THIS MONTH'S CAMPAIGNS </span>
    <div id="adGrid">
      <table>
       <tr>
        <% arrayCount = 0 %>
        <% @ads.delete_if { |ad| ad.id == 10 } if production? # Exhale %>
        <% @ads.each_slice(1) do |slice| %>
            <% slice.each do |ad| %>
              <td>
                <div><%= erb :widgetModule, :locals => { :ad => ad }%></div>
               
              </td>
              <% arrayCount += 1 %>
              <% if arrayCount % 3 == 0 %>
                </tr><tr>
              <% end %>
            <% end %>
        <% end %>
        </tr>
      </table>
    </div>
